{
  "name": "snap",
  "version": "0.1.0",
  "private": true,
  "description": "The 'Hello, world!' of MetaMask Snaps, now written in TypeScript.",
  "repository": {
    "type": "git",
    "url": "https://github.com/MetaMask/template-snap-monorepo.git"
  },
  "license": "(MIT-0 OR Apache-2.0)",
  "main": "src/index.ts",
  "files": [
    "dist/",
    "images/",
    "snap.manifest.json"
  ],
  "scripts": {
    "build": "webpack && mm-snap manifest --fix",
    "build:clean": "yarn clean && yarn build",
    "build:website": "node ./scripts/build-website.js",
    "clean": "rimraf dist",
    "lint": "yarn lint:eslint && yarn lint:misc --check",
    "lint:eslint": "eslint . --cache --ext js,ts",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:misc --write",
    "lint:misc": "prettier '**/*.json' '**/*.md' '!CHANGELOG.md' --ignore-path .gitignore",
    "serve": "mm-snap serve",
    "start": "nodemon"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/preset-typescript": "^7.21.0",
    "@lavamoat/allow-scripts": "^2.3.0",
    "@metamask/auto-changelog": "^3.1.0",
    "@metamask/eslint-config": "^11.1.0",
    "@metamask/eslint-config-jest": "^11.1.0",
    "@metamask/eslint-config-nodejs": "^11.1.0",
    "@metamask/eslint-config-typescript": "^10.0.0",
    "@metamask/snaps-cli": "^0.30.0",
    "@metamask/snaps-types": "^0.30.0",
    "@metamask/snaps-ui": "^0.30.0",
    "@metamask/snaps-webpack-plugin": "^0.31.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "babel-loader": "^9.1.2",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsdoc": "^40.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.4",
    "prettier-plugin-packagejson": "^2.4.3",
    "rimraf": "^4.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "webpack": "^5.76.2",
    "webpack-cli": "^5.0.1",
    "webpack-merge": "^5.8.0",
    "webpackbar": "^5.0.2"
  },
  "packageManager": "yarn@3.2.1",
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@ethereumjs/common": "^2.6.4",
    "@ethereumjs/tx": "^3.5.2",
    "@ethereumjs/util": "^8.0.5",
    "@metamask/eth-sig-util": "^5.0.2",
    "buffer": "^6.0.3",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "stream-browserify": "^3.0.0"
  }
}
