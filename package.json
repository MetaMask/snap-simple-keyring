{
  "name": "@metamask/snap-simple-keyring",
  "version": "0.2.1",
  "private": true,
  "description": "A simple keyring snap that integrates with MetaMask accounts.",
  "keywords": [
    "metamask",
    "snap",
    "keyring",
    "account"
  ],
  "homepage": "https://github.com/MetaMask/snap-simple-keyring#readme",
  "bugs": {
    "url": "https://github.com/MetaMask/snap-simple-keyring/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MetaMask/snap-simple-keyring.git"
  },
  "license": "(MIT-0 OR Apache-2.0)",
  "author": "",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --parallel --topological --verbose run build",
    "build:dapp": "yarn workspace @metamask/snap-simple-keyring-site build",
    "build:snap": "yarn workspace @metamask/snap-simple-keyring-snap build",
    "lint": "yarn lint:eslint && yarn lint:misc",
    "lint:eslint": "yarn workspaces foreach --parallel --verbose run eslint . --cache --ext js,ts",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:misc --write",
    "lint:misc": "yarn workspaces foreach --parallel --verbose run prettier '**/*.json' '**/*.md' '!**/CHANGELOG.md' '**/*.yml' '**/*.html' --ignore-path .gitignore --check",
    "start": "yarn workspaces foreach --parallel --interlaced --verbose run start",
    "test": "yarn workspaces foreach --parallel --verbose run test"
  },
  "dependencies": {
    "@ethereumjs/tx": "^4.1.1",
    "@ethereumjs/util": "^8.0.5"
  },
  "devDependencies": {
    "@metamask/eslint-config": "^12.2.0",
    "@metamask/eslint-config-jest": "^12.1.0",
    "@metamask/eslint-config-nodejs": "^12.1.0",
    "@metamask/eslint-config-typescript": "^12.1.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsdoc": "^40.0.3",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^2.8.4",
    "prettier-plugin-packagejson": "^2.4.3",
    "typescript": "^4.9.5"
  },
  "packageManager": "yarn@3.2.1",
  "engines": {
    "node": ">=16.0.0"
  }
}
